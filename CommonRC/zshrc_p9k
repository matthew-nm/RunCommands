# Powerlevel load
if [ $POWERLINE = 1 ]; then
  POWERLEVEL9K_MODE='awesome-patched'
fi

source ~/Utilities/powerlevel9k/powerlevel9k.zsh-theme

# Disable VCS switch
if [ $VCS_OFF = 1 ]; then
  POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(dir) #(status dir)
else
  POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(dir vcs) #(status dir vcs)
fi

